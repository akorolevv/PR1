<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="Theme.MeditationApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_secondary</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_text_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>

        <!-- Кастомные атрибуты для нашего приложения -->
        <item name="appBackgroundColor">@color/light_background</item>
        <item name="appSurfaceColor">@color/light_surface</item>
        <item name="appTextPrimaryColor">@color/light_text_primary</item>
        <item name="appTextSecondaryColor">@color/light_text_secondary</item>
        <item name="appDividerColor">@color/light_divider</item>
        <item name="appPrimaryColor">@color/light_primary</item>
    </style>

    <!-- Темная тема -->
    <style name="Theme.MeditationApp.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_secondary</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Кастомные атрибуты для нашего приложения -->
        <item name="appBackgroundColor">@color/dark_background</item>
        <item name="appSurfaceColor">@color/dark_surface</item>
        <item name="appTextPrimaryColor">@color/dark_text_primary</item>
        <item name="appTextSecondaryColor">@color/dark_text_secondary</item>
        <item name="appDividerColor">@color/dark_divider</item>
        <item name="appPrimaryColor">@color/dark_primary</item>
    </style>
</resources>