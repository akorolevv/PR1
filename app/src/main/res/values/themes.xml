<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="Theme.MeditationApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/card_bg</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Темная тема -->
    <style name="Theme.MeditationApp.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryDark">@color/primary_dark_dark_theme</item>
        <item name="colorAccent">@color/primary_light_dark_theme</item>
        <item name="android:windowBackground">@color/background_dark_theme</item>
        <item name="colorSurface">@color/card_bg_dark_theme</item>
        <item name="colorOnSurface">@color/text_primary_dark_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/text_primary_dark_theme</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark_theme</item>
    </style>
</resources>