<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/meditation_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="Meditation image"
            android:scaleType="centerCrop"
            android:src="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:id="@+id/meditation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Спокойствие для начинающих"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meditation_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="10 минут"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/meditation_instructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:text="Александр Петров"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>